<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.sharedtable.view.MainCanvas?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<VBox fx:controller="com.sharedtable.view.MainView" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <children>
        <MenuBar>
            <Menu text="Commands">
                <MenuItem text="DrawLine"></MenuItem>
                <MenuItem text="ClearCanvas" onAction="#onClearPressed"></MenuItem>
                <MenuItem text="Undo" onAction="#onUndoPressed"></MenuItem>
                <MenuItem text="Redo" onAction="#onRedoPressed"></MenuItem>
                <MenuItem text="ListMementos" onAction="#onListMementosPressed"></MenuItem>
                <MenuItem text="MakeCrircle" onAction="#onMakeCirclePressed"></MenuItem>
                <MenuItem text="WriteAllKnownClients" onAction="#onWriteAllKnownClientsPressed"></MenuItem>

            </Menu>
        </MenuBar>

        <HBox>
            <MainCanvas fx:id="canvas" width="640" height="480"></MainCanvas>
        </HBox>
    </children>
</VBox>